model Order {
  id Int @id @default(autoincrement())
  itemCode String
  itemName String
  price String
  color String
  size String
  userId String
  orderCode String 
  orderState String @default("상품준비중")
  payType String @default("무통장입금")
  thum String?
  createdAt DateTime @default(now())
}

model Cart {
  id Int @id @default(autoincrement())
  userId String
  itemCode String
  itemName String
  price String
  color String
  size String
  thum String?
}